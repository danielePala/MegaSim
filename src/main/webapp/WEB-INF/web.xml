<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>myapp.Login</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Logout</servlet-name>
		<servlet-class>myapp.Logout</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Simulator</servlet-name>
		<servlet-class>myapp.Simulator</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Worker</servlet-name>
		<servlet-class>myapp.Worker</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Statistics</servlet-name>
		<servlet-class>myapp.Statistics</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Simulator</servlet-name>
		<url-pattern>/simulate</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Worker</servlet-name>
		<url-pattern>/worker</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Statistics</servlet-name>
		<url-pattern>/statistics</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
